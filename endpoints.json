{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of the article with the given id",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "title": "Day in the life of a software developer",
          "topic": "IT",
          "author": "Al98",
          "body": "Text from the article..",
          "created_at": "2023-05-09T20:11:00.000Z",
          "votes": 17,
          "comment_count": 10
        }
      ]
    }
  },
  "GET /api/articles/:id/comments": {
    "description": "serves an object of the comments for the given article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment id": 11,
          "body": "Ambidextrous marsupial",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2023-05-09T20:11:00.000Z"
        },
        {
          "comment_id": 10,
          "body": "git push origin master",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-06-20T07:24:00.000Z"
        }
      ]
    }
  }
}
